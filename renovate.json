{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base",
        "group:monorepos"
    ],
    "major": {
        "enabled": false
    },
    "minor": {
        "enabled": false
    },
    "automerge": false,
    "branchPrefix": "renovate",
    "baseBranches": [
        "main"
    ],
    "timezone": "Europe/Paris",
    "schedule": ["after 8am every weekday"],
    "packageRules": [
        {
            "matchUpdateTypes": [
                "patch"
            ],
            "automerge": false,
            "packageFile": "package.json"
        }
    ],
    "prConcurrentLimit": 1,
    "labels": [
        "review-needed"
    ]
}
